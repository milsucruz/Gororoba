@page "/"
@rendermode InteractiveServer
@inject HttpClient Http
@inject RecipesService RecipesService

<div class="MainBanner">
    <img class="BannerImg" src="Assets/BannerCover.png" />
    <div>
        <h1>Welcome to Gororoba</h1>
        <span>Find your favorite recipes!</span>
    </div>
</div>

<div class="SearchMenu">
    <MudTextField @bind-Value="searchQuery"
    Label="Find your recipe"
    Variant="Variant.Outlined"
    AdornmentIcon="@Icons.Material.Filled.Search" />

    <MudButton Color="Color.Primary" OnClick="SearchRecipes" Size="Size.Large" Variant="Variant.Filled" Style="height: 56px">
        Search
        <MudIcon Icon="@Icons.Material.Filled.Search" Title="Search" />
    </MudButton>
</div>

<div class="Grid">
    @if (recipes != null)
    {
        if(recipes.Count > 0)
        {
            <div class="Cards">
                @* <MainCard ImageUrl="https://img.spoonacular.com/recipes/716429-556x370.jpg" RecipeTitle="Home Made Dry-Aged Sirloin Steak with Cheesy Roast Fingerling Potatoes" RecipeId="716429" /> *@
                @foreach (var recipe in recipes)
                {
                    <MainCard ImageUrl="@recipe.Image" RecipeTitle="@recipe.Title" RecipeId="@recipe.Id"/>
                }
            </div>
        }
        else
        {
            <div class="EmptyCard">
                <h1>No recipes found!</h1>
                <span>Please search again</span>
            </div>
        }
    }
 </div>
